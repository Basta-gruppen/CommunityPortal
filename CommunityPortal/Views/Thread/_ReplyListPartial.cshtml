@model IEnumerable<Reply>

@{
    foreach (Reply reply in Model)
    {
        <div class="d-flex flex-row p-3 border border-bottom border-light">
            <div class="d-inline-flex flex-column border-end border-1 border-light">
                <img class="img-thumbnail" src="@reply.User.ImageURL" alt="@reply.User.UserName's avatar"/>
                <small class="text-dark m-0 text-center">
                    <a class="text-decoration-none link-dark" href="@Url.Action("Details", "User", new {id = reply.User.Id})">@reply.User.UserName</a>
                </small>
            </div>
            <div class="d-flex flex-column w-100 justify-content-between" style="min-width: 0;">
                @{
                    if (reply.Quote != null)
                    {
                        <div class="d-flex justify-content-center">
                            <div class="p-2 w-75 border border-1 border-light rounded-1">
                                <small class="m-0 text-muted">@reply.Quote.User.UserName</small>
                                <p class="m-0 text-muted text-truncate">@reply.Quote.Content</p>
                            </div>
                        </div>
                    }
                }
                <p id="@reply.Id-content" class="p-3 m-0 text-dark">@reply.Content</p>
                <div class="d-flex justify-content-end">
                    <div class="d-inline-flex align-items-end">
                        <small class="text-dark me-2">@reply.TimeStamp</small>
                        <button class="btn btn-sm btn-warning" onclick="SetReplyQuote('@reply.Id')">&quot;</button>
                    </div>
                </div>
            </div>
        </div>
    }
}