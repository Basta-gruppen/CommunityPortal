@model List<Post>

@{
    ViewBag.Title = "Post Index";
    Layout = "_Layout";
}

@section Scripts
{

}

<a
    class="btn btn-primary mb-4"
    asp-controller="Post"
    asp-action="Create">
    New Post
</a>
<div class="row">
    <!-- Blog entries-->
    <div class="col-lg-8">
        @foreach (var post in Model)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <div class="small text-muted">
                        Posted @post.Timestamp.ToString("yyyy-MM-dd HH:mm") by @post.User.UserName
                    </div>
                    @foreach (var postTag in post.PostTags)
                    {
                        <a
                            class="badge bg-secondary text-decoration-none link-light"
                            asp-controller="Post"
                            asp-action="Index"
                            asp-route-tag="@postTag.Tag.Name">
                            @postTag.Tag.Name
                        </a>
                    }
                    <h2 class="card-title">@post.Subject</h2>
                    <p class="card-text">@post.Content</p>
                    <a class="btn btn-primary"
                       asp-controller="Post"
                       asp-action="View"
                       asp-route-id="@post.Id">
                        Read more →
                    </a>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Administrate
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a
                                    class="dropdown-item"
                                    asp-controller="Post"
                                    asp-action="Edit"
                                    asp-route-id="@post.Id">
                                    Edit
                                </a>
                            </li>
                            <li>
                                <form method="Post" action="@Url.Action("Delete", "Post")">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" value="@post.Id" name="ID"/>
                                    <button class="dropdown-item" type="submit">Remove</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        <!-- Pagination-->
        <nav aria-label="Pagination">
            <hr class="my-0"/>
            <ul class="pagination justify-content-center my-4">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a>
                </li>
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#!">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#!">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#!">3</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#!">...</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#!">15</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#!">Older</a>
                </li>
            </ul>
        </nav>
    </div>
    <partial name="_PostSideBarPartial"/>
</div>