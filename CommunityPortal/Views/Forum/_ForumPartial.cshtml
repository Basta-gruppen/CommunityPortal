        <a class="text-dark fw-bold m-0 fs-4 text-decoration-none text-truncate" href="@Url.Action("Details", "Forum", new { id = Model.Id })">@Model.Name</a>
    </div>
    @{
        <partial name="_SubForumListPartial" model="@Model.SubForums"/>
    }
</div>