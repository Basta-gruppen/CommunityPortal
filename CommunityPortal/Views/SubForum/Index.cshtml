@model SubForum

@{
    ViewBag.Title = $"{@Model.Forum.Name} - {@Model.Name} Sub Forum";
    Layout = "_Layout";
}

@section Scripts
{
    <script src="~/js/Forum.js"></script>
}

<div class="d-flex flex-row justify-content-end mb-4">
    <div id="CreateNewContainer" hidden>
        <form class="d-inline-flex flex-row me-3" method="Post" action="@Url.Action("Create", "Thread")">
            @Html.AntiForgeryToken()
            <input hidden value="@Model.Id" name="SubForumId"/>
            <input id="Name" name="Name" placeholder="Name" class="form-control me-1"/>
            <button id="ButtonCreateConfirm" class="btn btn-success text-white" type="submit">&#10003;</button>
        </form>
    </div>
    <button class="btn btn-primary" onclick="ToggleCreateContainer()">New Thread</button>
</div>

<div class="d-flex flex-column rounded-1 border border-1 border-dark mb-4">
    <div class="border-bottom border-dark border-1">
        <h5 class="text-dark fw-bold m-0 p-3">@Model.Name</h5>
    </div>
    @{
        foreach (Thread thread in Model.Threads)   
        {
            <div class="p-3 border border-bottom border-light">
                <a class="text-dark fw-bold m-0 mb-1 text-decoration-none" href="@Url.Action("Index", "Thread", new { id = thread.Id })">@thread.Subject</a>
                <div class="d-flex flex-row justify-content-between">
                    <small class="text-dark m-0">@thread.User.UserName</small>
                    <small class="text-dark m-0">@thread.TimeStamp</small>
                </div>
            </div>
        }
    }
</div>
