@model IEnumerable<Event>
@{
    ViewData["Title"] = "Event Index";
    Layout = "_Layout";
}

<div class="d-flex flex-row justify-content-end mb-4">
    <a class="btn btn-primary" asp-controller="Event" asp-action="CreateEvent">New Event</a>
</div>
@{
    foreach (var ev in Model)
    {
        <div class="d-flex flex-column rounded-1 border border-1 border-dark mb-4">
            <div class="d-flex flex-row justify-content-between align-items-center border-bottom border-dark border-1 p-3">
                <h5 class="text-dark fw-bold m-0 fs-4 text-truncate" style="font-size:24px;">@ev.Subject</h5>
                <div>
                    <button class="btn btn-danger" style="text-decoration:none;color:black;">
                        @Html.ActionLink("Edit", "EditEvent", new { eventId = ev.Id }, new { @class = "text-decoration-none", @style = "font-weight:500;color:black;" })
                    </button>
                    <button class="btn btn-danger" style="text-decoration:none;color:black;">
                        @Html.ActionLink("Delete", "DeleteEvent", new { eventId = ev.Id }, new { @class = "text-decoration-none", @style = "font-weight:500;color:black;" })
                    </button>
                </div>
            </div>
            <br />
            <div class="flex-grow-1 ms-3" style="font-size: 17px;">
                @ev.Content
            </div>
            <br />
            <div class="flex-grow-1 ms-3" style="font-size: 17px;">
                Event Date :- @ev.StartDate @ev.User
            </div>
            <div class=" d-flex justify-content-end align-items-end ">
                @* @ev.User.UserName; Select @ev.User.UserName Where(ev =>  ev.User.Id ==ev.UserId).FirstOrDefault();*@
                <p style="padding-right:10px;font-size:13px">@ev.Timestamp</p>
            </div>
        </div>
    }
}
